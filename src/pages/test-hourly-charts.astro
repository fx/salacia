---
import { Layout } from '../components/Layout';
import '../styles/global.css';
import { VerticalBarChart } from '../components/VerticalBarChart';
import { HorizontalBarChart } from '../components/HorizontalBarChart';
---

<Layout client:load>
  <div style="padding: 2rem;">
    <h1>Hourly Resolution Chart Test</h1>

    <h2>Test 1: Last 24 Hours - Hourly Totals</h2>
    <div style="background: rgba(255,0,0,0.1); padding: 1rem;">
      <VerticalBarChart
        data={[
          12, 15, 8, 20, 25, 30, 18, 22, 28, 35, 40, 45, 38, 42, 48, 52, 55, 60, 50, 45, 40, 35, 30,
          25,
        ]}
        xAxisLabels={[
          '00:00',
          '01:00',
          '02:00',
          '03:00',
          '04:00',
          '05:00',
          '06:00',
          '07:00',
          '08:00',
          '09:00',
          '10:00',
          '11:00',
          '12:00',
          '13:00',
          '14:00',
          '15:00',
          '16:00',
          '17:00',
          '18:00',
          '19:00',
          '20:00',
          '21:00',
          '22:00',
          '23:00',
        ]}
        height={10}
        title="24-HOUR ACTIVITY (HOURLY)"
        client:load
      />
    </div>

    <h2>Test 2: Hourly Response Times</h2>
    <div style="background: rgba(0,255,0,0.1); padding: 1rem;">
      <VerticalBarChart
        data={[
          150, 120, 100, 80, 90, 110, 130, 140, 160, 180, 200, 190, 170, 150, 140, 130, 120, 110,
          100, 95, 90, 85, 80, 75,
        ]}
        xAxisLabels={[
          '00:00',
          '01:00',
          '02:00',
          '03:00',
          '04:00',
          '05:00',
          '06:00',
          '07:00',
          '08:00',
          '09:00',
          '10:00',
          '11:00',
          '12:00',
          '13:00',
          '14:00',
          '15:00',
          '16:00',
          '17:00',
          '18:00',
          '19:00',
          '20:00',
          '21:00',
          '22:00',
          '23:00',
        ]}
        yAxisLabels={['200ms', '100ms', '0ms']}
        height={10}
        title="HOURLY RESPONSE TIME"
        client:load
      />
    </div>

    <h2>Test 3: Horizontal Hourly Chart</h2>
    <div style="background: rgba(0,0,255,0.1); padding: 1rem;">
      <HorizontalBarChart
        data={[
          { label: '00:00', value: 50, failed: 2 },
          { label: '01:00', value: 45, failed: 1 },
          { label: '02:00', value: 30, failed: 0 },
          { label: '03:00', value: 25, failed: 0 },
          { label: '04:00', value: 20, failed: 0 },
          { label: '05:00', value: 22, failed: 1 },
          { label: '06:00', value: 35, failed: 2 },
          { label: '07:00', value: 45, failed: 3 },
          { label: '08:00', value: 60, failed: 2 },
          { label: '09:00', value: 75, failed: 1 },
          { label: '10:00', value: 80, failed: 0 },
          { label: '11:00', value: 85, failed: 1 },
        ]}
        width={30}
        title="HOURLY SUCCESS/FAILED"
        showFailedStack={true}
        client:load
      />
    </div>

    <h2>Visual Verification Checklist</h2>
    <ul>
      <li>✓ 24 bars should be visible for hourly data</li>
      <li>✓ X-axis labels should show hour format (HH:MM)</li>
      <li>✓ Charts should be readable with hourly resolution</li>
      <li>✓ Bar spacing should accommodate 24 data points</li>
      <li>✓ Horizontal chart should handle hourly labels properly</li>
    </ul>
  </div>
</Layout>
