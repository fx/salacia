---
import { Layout } from '../components/Layout';
import '../styles/global.css';
---

<html lang="en" data-webtui-theme="catppuccin-mocha">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Salacia - Home</title>
  </head>
  <body class="w-full h-screen m-0 p-0 overflow-hidden">
    <Layout client:idle>
      <div class="w-full h-full flex flex-col">
        <!-- Terminal-style welcome header -->
        <div class="border-2 border-primary bg-surface-subtle mb-4 shrink-0">
          <div class="flex items-center px-4 py-2 border-b border-primary bg-surface">
            <span class="text-primary font-bold">┌─</span>
            <span class="text-primary font-bold text-sm tracking-wider mx-2">WELCOME TO SALACIA</span>
            <span class="text-primary font-bold">─┐</span>
          </div>
          <div class="px-4 py-2">
            <span class="text-primary">│</span>
            <span class="text-foreground text-sm mx-2">
              LLM inference API proxy with database recording capabilities
            </span>
            <span class="text-primary ml-auto">│</span>
          </div>
          <div class="px-4 py-1">
            <div class="flex items-center">
              <span class="text-primary font-bold">└─</span>
              <div class="flex-1 border-t border-primary mx-1"></div>
              <span class="text-primary font-bold">─┘</span>
            </div>
          </div>
        </div>

        <!-- Terminal-style system info -->
        <div class="border-2 border-primary bg-surface-subtle mb-4 shrink-0">
          <div class="flex items-center px-4 py-2 border-b border-primary bg-surface">
            <span class="text-primary font-bold">┌─</span>
            <span class="text-primary font-bold text-sm tracking-wider mx-2">SYSTEM STATUS</span>
            <span class="text-primary font-bold">─┐</span>
          </div>
          <div class="px-4 py-2 space-y-1">
            <div class="flex items-center">
              <span class="text-primary">│</span>
              <span class="text-foreground text-sm mx-2">
                Status: <span class="text-green-400">ONLINE</span>
              </span>
              <span class="text-primary ml-auto">│</span>
            </div>
            <div class="flex items-center">
              <span class="text-primary">│</span>
              <span class="text-foreground text-sm mx-2">
                Database: <span class="text-green-400">CONNECTED</span>
              </span>
              <span class="text-primary ml-auto">│</span>
            </div>
            <div class="flex items-center">
              <span class="text-primary">│</span>
              <span class="text-foreground text-sm mx-2">
                Theme: <span class="text-yellow-400">CATPPUCCIN-MOCHA</span>
              </span>
              <span class="text-primary ml-auto">│</span>
            </div>
          </div>
          <div class="px-4 py-1">
            <div class="flex items-center">
              <span class="text-primary font-bold">└─</span>
              <div class="flex-1 border-t border-primary mx-1"></div>
              <span class="text-primary font-bold">─┘</span>
            </div>
          </div>
        </div>

        <!-- Terminal-style quick actions -->
        <div class="border-2 border-primary bg-surface-subtle shrink-0">
          <div class="flex items-center px-4 py-2 border-b border-primary bg-surface">
            <span class="text-primary font-bold">┌─</span>
            <span class="text-primary font-bold text-sm tracking-wider mx-2">QUICK ACTIONS</span>
            <span class="text-primary font-bold">─┐</span>
          </div>
          <div class="px-4 py-2 space-y-1">
            <div class="flex items-center">
              <span class="text-primary">│</span>
              <a href="/messages" class="text-blue-400 hover:text-blue-300 text-sm mx-2 underline">
                [1] View Messages Database →
              </a>
              <span class="text-primary ml-auto">│</span>
            </div>
            <div class="flex items-center">
              <span class="text-primary">│</span>
              <span class="text-foreground-muted text-sm mx-2">
                [2] API Documentation (Coming Soon)
              </span>
              <span class="text-primary ml-auto">│</span>
            </div>
          </div>
          <div class="px-4 py-1">
            <div class="flex items-center">
              <span class="text-primary font-bold">└─</span>
              <div class="flex-1 border-t border-primary mx-1"></div>
              <span class="text-primary font-bold">─┘</span>
            </div>
          </div>
        </div>
      </div>
    </Layout>
  </body>
</html>
