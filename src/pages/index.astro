---
import { Layout } from '../components/Layout';
import '../styles/global.css';
---

<html lang="en" data-webtui-theme="catppuccin-mocha">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Salacia - Home</title>
  </head>
  <body class="w-full h-screen m-0 p-0 overflow-hidden">
    <Layout client:idle>
      <div>
        <h1 class="text-3xl font-bold text-foreground mb-6">Welcome to Salacia</h1>
        <p class="text-foreground-muted text-lg">
          LLM inference API proxy with database recording capabilities
        </p>
      </div>
    </Layout>
  </body>
</html>
