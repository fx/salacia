---
import { Layout } from '../components/Layout';
import '../styles/global.css';
---

<html lang="en" data-webtui-theme="catppuccin">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Salacia - Home</title>
  </head>
  <body>
    <Layout client:idle>
      <div>
        <!-- Terminal-style welcome header -->
        <div box-="square">
          <h2># WELCOME TO SALACIA</h2>
          <p>LLM inference API proxy with database recording capabilities</p>
        </div>

        <!-- Terminal-style system info -->
        <div box-="square">
          <h3>## SYSTEM STATUS</h3>
          <p>Status: <span is-="badge" variant-="green">ONLINE</span></p>
          <p>Database: <span is-="badge" variant-="green">CONNECTED</span></p>
          <p>Theme: <span is-="badge" variant-="yellow">CATPPUCCIN</span></p>
        </div>

        <!-- Terminal-style quick actions -->
        <div box-="square">
          <h3>### QUICK ACTIONS</h3>
          <p><a href="/messages">[1] View Messages Database â†’</a></p>
          <p><span is-="badge" variant-="background1">[2] API Documentation (Coming Soon)</span></p>
        </div>
      </div>
    </Layout>
  </body>
</html>
