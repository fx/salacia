---
import { Layout } from '../components/Layout';
import '../styles/global.css';
---

<html lang="en" data-webtui-theme="catppuccin-mocha">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Salacia - Home</title>
  </head>
  <body class="w-full h-screen m-0 p-0 overflow-hidden">
    <Layout client:idle>
      <div class="w-full h-full flex flex-col">
        <!-- Terminal-style welcome header -->
        <div box-="square" class="bg-surface-subtle mb-4 shrink-0">
          <div class="flex items-center px-4 py-2 border-b border-primary bg-surface">
            <span class="text-primary font-bold text-sm tracking-wider">WELCOME TO SALACIA</span>
          </div>
          <div class="px-4 py-2">
            <span class="text-foreground text-sm">
              LLM inference API proxy with database recording capabilities
            </span>
          </div>
        </div>

        <!-- Terminal-style system info -->
        <div box-="square" class="bg-surface-subtle mb-4 shrink-0">
          <div class="flex items-center px-4 py-2 border-b border-primary bg-surface">
            <span class="text-primary font-bold text-sm tracking-wider">SYSTEM STATUS</span>
          </div>
          <div class="px-4 py-2 space-y-1">
            <div class="text-foreground text-sm">
              Status: <span class="text-green-400">ONLINE</span>
            </div>
            <div class="text-foreground text-sm">
              Database: <span class="text-green-400">CONNECTED</span>
            </div>
            <div class="text-foreground text-sm">
              Theme: <span class="text-yellow-400">CATPPUCCIN-MOCHA</span>
            </div>
          </div>
        </div>

        <!-- Terminal-style quick actions -->
        <div box-="square" class="bg-surface-subtle shrink-0">
          <div class="flex items-center px-4 py-2 border-b border-primary bg-surface">
            <span class="text-primary font-bold text-sm tracking-wider">QUICK ACTIONS</span>
          </div>
          <div class="px-4 py-2 space-y-1">
            <div>
              <a href="/messages" class="text-blue-400 hover:text-blue-300 text-sm underline">
                [1] View Messages Database â†’
              </a>
            </div>
            <div>
              <span class="text-foreground-muted text-sm">
                [2] API Documentation (Coming Soon)
              </span>
            </div>
          </div>
        </div>
      </div>
    </Layout>
  </body>
</html>
