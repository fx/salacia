---
import { Layout } from '../components/Layout';
import '../styles/global.css';
---

<html lang="en" data-webtui-theme="catppuccin-mocha">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Salacia - Home</title>
  </head>
  <body data-body="terminal">
    <Layout client:idle>
      <div data-page="home">
        <!-- Terminal-style welcome header -->
        <div box-="square" data-panel="welcome">
          <div data-panel-header>
            <span data-panel-title>WELCOME TO SALACIA</span>
          </div>
          <div data-panel-content>
            <span>
              LLM inference API proxy with database recording capabilities
            </span>
          </div>
        </div>

        <!-- Terminal-style system info -->
        <div box-="square" data-panel="status">
          <div data-panel-header>
            <span data-panel-title>SYSTEM STATUS</span>
          </div>
          <div data-panel-content>
            <div data-status-item>
              Status: <span data-status="online">ONLINE</span>
            </div>
            <div data-status-item>
              Database: <span data-status="online">CONNECTED</span>
            </div>
            <div data-status-item>
              Theme: <span data-status="info">CATPPUCCIN-MOCHA</span>
            </div>
          </div>
        </div>

        <!-- Terminal-style quick actions -->
        <div box-="square" data-panel="actions">
          <div data-panel-header>
            <span data-panel-title>QUICK ACTIONS</span>
          </div>
          <div data-panel-content>
            <div data-action-item>
              <a href="/messages" data-action-link>
                [1] View Messages Database â†’
              </a>
            </div>
            <div data-action-item>
              <span data-action-disabled>
                [2] API Documentation (Coming Soon)
              </span>
            </div>
          </div>
        </div>
      </div>
    </Layout>
  </body>
</html>
