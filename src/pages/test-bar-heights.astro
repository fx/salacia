---
import { Layout } from '../components/Layout';
import '../styles/global.css';
import { VerticalBarChart } from '../components/VerticalBarChart';
---

<Layout client:load>
  <div style="padding: 2rem;">
    <h1>Vertical Bar Chart Height Test</h1>

    <h2>Test 1: Single Value (150ms) - Should show full height bar</h2>
    <div style="background: rgba(255,0,0,0.1); padding: 1rem;">
      <VerticalBarChart
        data={[150]}
        yAxisLabels={['150ms', '75ms', '0ms']}
        xAxisLabels={['8/9']}
        height={10}
        title="Single Max Value"
        client:load
      />
    </div>

    <h2>Test 2: Multiple Values with Different Heights</h2>
    <div style="background: rgba(0,255,0,0.1); padding: 1rem;">
      <VerticalBarChart
        data={[30, 60, 90, 120, 150]}
        yAxisLabels={['150', '75', '0']}
        xAxisLabels={['A', 'B', 'C', 'D', 'E']}
        height={10}
        title="Incremental Values"
        client:load
      />
    </div>

    <h2>Test 3: Mixed Values</h2>
    <div style="background: rgba(0,0,255,0.1); padding: 1rem;">
      <VerticalBarChart
        data={[100, 50, 75, 25, 100]}
        yAxisLabels={['100%', '50%', '0%']}
        xAxisLabels={['Mon', 'Tue', 'Wed', 'Thu', 'Fri']}
        height={10}
        title="Weekly Performance"
        client:load
      />
    </div>

    <h2>Visual Verification Checklist</h2>
    <ul>
      <li>✓ All bars should be visible (not 0px height)</li>
      <li>✓ Single value should show at 100% height</li>
      <li>✓ Multiple values should show proportional heights</li>
      <li>✓ Bars should align to bottom of the box</li>
      <li>✓ The box should have a square border around bars only</li>
      <li>✓ Y-axis labels should align with the chart height</li>
    </ul>
  </div>
</Layout>
