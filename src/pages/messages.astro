---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Salacia - AI Interaction Dashboard">
  <!-- Header -->
  <header class="webtui-header">
    <div class="webtui-container">
      <h1 class="webtui-title">Salacia AI Dashboard</h1>
      <p class="webtui-subtitle">Monitor and analyze AI interactions</p>
    </div>
  </header>

  <!-- Main Content -->
  <main class="webtui-main">
    <div class="webtui-container">
      <!-- Messages Table Container -->
      <div id="messages-container">
        <!-- Loading state with skeleton -->
        <div id="loading-state" class="webtui-loading">
          <div class="loading-skeleton">
            <div class="skeleton-header">
              <div class="skeleton-title"></div>
              <div class="skeleton-subtitle"></div>
            </div>
            <div class="skeleton-table">
              <div class="skeleton-row" style="--delay: 0.1s;">
                <div class="skeleton-cell skeleton-cell--time"></div>
                <div class="skeleton-cell skeleton-cell--model"></div>
                <div class="skeleton-cell skeleton-cell--provider"></div>
                <div class="skeleton-cell skeleton-cell--tokens"></div>
                <div class="skeleton-cell skeleton-cell--response-time"></div>
                <div class="skeleton-cell skeleton-cell--status"></div>
                <div class="skeleton-cell skeleton-cell--preview"></div>
              </div>
              <div class="skeleton-row" style="--delay: 0.2s;">
                <div class="skeleton-cell skeleton-cell--time"></div>
                <div class="skeleton-cell skeleton-cell--model"></div>
                <div class="skeleton-cell skeleton-cell--provider"></div>
                <div class="skeleton-cell skeleton-cell--tokens"></div>
                <div class="skeleton-cell skeleton-cell--response-time"></div>
                <div class="skeleton-cell skeleton-cell--status"></div>
                <div class="skeleton-cell skeleton-cell--preview"></div>
              </div>
              <div class="skeleton-row" style="--delay: 0.3s;">
                <div class="skeleton-cell skeleton-cell--time"></div>
                <div class="skeleton-cell skeleton-cell--model"></div>
                <div class="skeleton-cell skeleton-cell--provider"></div>
                <div class="skeleton-cell skeleton-cell--tokens"></div>
                <div class="skeleton-cell skeleton-cell--response-time"></div>
                <div class="skeleton-cell skeleton-cell--status"></div>
                <div class="skeleton-cell skeleton-cell--preview"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Error state -->
        <div id="error-state" class="webtui-error" style="display: none;">
          <div class="error-container">
            <div class="error-icon">⚠️</div>
            <div class="error-content">
              <div class="webtui-error-title">Unable to load messages</div>
              <div id="error-message" class="error-message">An error occurred while fetching data.</div>
              <div class="error-actions">
                <button id="retry-btn" class="webtui-button webtui-button--primary">Try Again</button>
                <button id="refresh-btn" class="webtui-button webtui-button--secondary">Refresh Page</button>
              </div>
            </div>
          </div>
        </div>

        <!-- Messages table (will be populated by JavaScript) -->
        <div id="messages-table" style="display: none;">
          <div class="webtui-table-container">
            <table class="webtui-table">
              <thead>
                <tr>
                  <th>Time</th>
                  <th>Model</th>
                  <th>Provider</th>
                  <th>Tokens</th>
                  <th>Response Time</th>
                  <th>Status</th>
                  <th>Preview</th>
                </tr>
              </thead>
              <tbody id="messages-tbody">
                <!-- Rows will be populated by JavaScript -->
              </tbody>
            </table>

            <!-- Pagination -->
            <div id="pagination" class="webtui-pagination">
              <div class="webtui-pagination-info">
                Showing <span id="pagination-start">0</span> to <span id="pagination-end">0</span> 
                of <span id="pagination-total">0</span> messages
              </div>
              <div class="webtui-pagination-controls">
                <button id="prev-btn" class="webtui-pagination-btn" disabled>Previous</button>
                <div id="page-numbers"></div>
                <button id="next-btn" class="webtui-pagination-btn" disabled>Next</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Message Detail Modal -->
  <div id="message-modal" class="webtui-modal" style="display: none;">
    <div class="webtui-modal-overlay" id="modal-overlay"></div>
    <div class="webtui-modal-content">
      <div class="webtui-modal-header">
        <h3 class="webtui-modal-title" id="modal-title">Message Details</h3>
        <button id="modal-close" class="webtui-modal-close" aria-label="Close modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      
      <div class="webtui-modal-body" id="modal-body">
        <!-- Loading state -->
        <div id="modal-loading" class="webtui-loading">
          <div class="webtui-spinner"></div>
          Loading message details...
        </div>
        
        <!-- Error state -->
        <div id="modal-error" class="webtui-error" style="display: none;">
          <div class="webtui-error-title">Failed to load message details</div>
          <div id="modal-error-message">An error occurred while fetching data.</div>
        </div>
        
        <!-- Content sections -->
        <div id="modal-content" style="display: none;">
          <!-- Message Overview -->
          <div class="webtui-section">
            <h4 class="webtui-section-title">Overview</h4>
            <div class="webtui-grid webtui-grid--2">
              <div class="webtui-field">
                <label class="webtui-label">Model</label>
                <div id="detail-model" class="webtui-value"></div>
              </div>
              <div class="webtui-field">
                <label class="webtui-label">Provider</label>
                <div id="detail-provider" class="webtui-value"></div>
              </div>
              <div class="webtui-field">
                <label class="webtui-label">Timestamp</label>
                <div id="detail-timestamp" class="webtui-value"></div>
              </div>
              <div class="webtui-field">
                <label class="webtui-label">Status</label>
                <div id="detail-status" class="webtui-value"></div>
              </div>
              <div class="webtui-field">
                <label class="webtui-label">Response Time</label>
                <div id="detail-response-time" class="webtui-value"></div>
              </div>
              <div class="webtui-field">
                <label class="webtui-label">Tokens</label>
                <div id="detail-tokens" class="webtui-value"></div>
              </div>
            </div>
          </div>
          
          <!-- Request Details -->
          <div class="webtui-section">
            <h4 class="webtui-section-title">Request</h4>
            <div class="webtui-code-block">
              <pre id="detail-request" class="webtui-code"></pre>
            </div>
          </div>
          
          <!-- Response Details -->
          <div class="webtui-section">
            <h4 class="webtui-section-title">Response</h4>
            <div class="webtui-code-block">
              <pre id="detail-response" class="webtui-code"></pre>
            </div>
          </div>
          
          <!-- Headers -->
          <div class="webtui-section">
            <h4 class="webtui-section-title">Headers</h4>
            <div class="webtui-code-block">
              <pre id="detail-headers" class="webtui-code"></pre>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- JavaScript for data fetching and table management -->
  <script src="/js/messages-dashboard.js"></script>
</Layout>

<style>
  /* Add WebTUI CSS link */
  @import '/css/webtui.css';
</style>