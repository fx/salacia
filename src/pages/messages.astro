---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Salacia - Messages">
  <div class="messages-container">
    <div class="stats-bar">
      <div class="stat">
        <span class="stat-label">Total Messages:</span>
        <span class="stat-value">--</span>
      </div>
      <div class="stat">
        <span class="stat-label">Success Rate:</span>
        <span class="stat-value">--%</span>
      </div>
      <div class="stat">
        <span class="stat-label">Avg Response Time:</span>
        <span class="stat-value">--ms</span>
      </div>
      <div class="stat">
        <span class="stat-label">Total Tokens:</span>
        <span class="stat-value">--</span>
      </div>
    </div>

    <div class="table-container">
      <table class="table">
        <thead>
          <tr>
            <th>Time</th>
            <th>Model</th>
            <th>Provider</th>
            <th>Tokens</th>
            <th>Response Time</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody id="messages-tbody">
          <tr>
            <td colspan="6" class="loading-row">Loading messages...</td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="pagination">
      <button class="btn" id="prev-btn" disabled>Previous</button>
      <span class="page-info">Page 1 of 1</span>
      <button class="btn" id="next-btn" disabled>Next</button>
    </div>
  </div>
</Layout>

<style>
  .messages-container {
    max-width: 100%;
    margin: 0 auto;
  }

  .stats-bar {
    display: flex;
    gap: 2rem;
    margin-bottom: 2rem;
    padding: 1rem;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius);
  }

  .stat {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .stat-value {
    font-weight: bold;
    font-family: monospace;
  }

  .table-container {
    border: 1px solid var(--border);
    border-radius: var(--radius);
    overflow: hidden;
    margin-bottom: 1rem;
  }

  .table {
    width: 100%;
    border-collapse: collapse;
    font-family: monospace;
  }

  .table th,
  .table td {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 1px solid var(--border);
  }

  .table th {
    background: var(--surface);
    font-weight: bold;
    position: sticky;
    top: 0;
  }

  .table tbody tr:hover {
    background: var(--surface);
    cursor: pointer;
  }

  .loading-row {
    text-align: center;
    color: var(--text-muted);
    font-style: italic;
  }

  .pagination {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .page-info {
    font-family: monospace;
    color: var(--text-muted);
  }

  @media (max-width: 768px) {
    .stats-bar {
      flex-direction: column;
      gap: 1rem;
    }

    .table-container {
      overflow-x: auto;
    }

    .table {
      min-width: 600px;
    }
  }
</style>

<script>
  // Basic page initialization
  document.addEventListener('DOMContentLoaded', () => {
    // Add click handlers for pagination buttons
    const prevBtn = document.getElementById('prev-btn');
    const nextBtn = document.getElementById('next-btn');
    
