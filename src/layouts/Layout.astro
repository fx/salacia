---
import '../styles/global.css';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Salacia - LLM inference API proxy with database recording capabilities" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="container">
      <header class="header">
        <h1 class="title">{title}</h1>
      </header>
      <main class="main">
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  .container {
    min-height: 100vh;
  }
  
  .header {
    border-bottom: 1px solid var(--border);
    margin-bottom: 1rem;
  }
  
  .title {
    margin: 0;
    padding: 1rem 0;
  }
  
  .main {
    flex: 1;
  }
</style>