{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["DOM", "ES2022"],
    "paths": {
      "@/*": ["./src/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/db/*": ["./src/lib/db/*"],
      "@/types/*": ["./src/types/*"]
    },
    "types": ["astro/client", "node"]
  }
}
